<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_go_driver"
    android:layout_width="match_parent"
    android:layout_height="410dp"
    android:background="@drawable/rounded_shape"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="260dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/topPanel"
        android:visibility="visible">

        <EditText
            android:id="@+id/text_bottom"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="85dp"
            android:backgroundTint="@color/gray"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="@string/start_country"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_mono_bold" />

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:translationY="15dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/profile_man"
                android:layout_marginStart="10dp"
                android:contentDescription="TODO" />

        </FrameLayout>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/bp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_mono_bold"
                    android:text="@string/time_echo"
                    android:textColor="@color/dark_gray"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="55dp"
                    android:text="@string/time"
                    android:textSize="16sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_mono_bold"
                    android:text="@string/range_echo"
                    android:textColor="@color/dark_gray"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:text="@string/range"
                    android:textSize="16sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_mono_bold"
                    android:text="@string/price_echo"
                    android:textColor="@color/dark_gray"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="55dp"
                    android:text="@string/pay"
                    android:textSize="16sp" />

            </FrameLayout>

        </LinearLayout>

        <Button
            android:id="@+id/place"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/blue"
            android:text="@string/place" />

        <Button
            android:id="@+id/land"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/blue"
            android:text="@string/down"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/tel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/tel" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_user"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_mono_bold"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/wait_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_mono_bold"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="мин"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_mono_bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_wait"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_mono_bold"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/price_wait"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_mono_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="руб"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_mono_bold"/>

    </LinearLayout>


    <TextView
        android:id="@+id/cancel"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отменить"
        android:textSize="16sp"
        android:textColor="@color/red_erro"
        android:fontFamily="@font/roboto_mono" />


</LinearLayout>