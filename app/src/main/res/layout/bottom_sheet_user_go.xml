<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_go_driver"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/topPanel"
        android:visibility="visible"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:translationY="15dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/profile_man"
                android:contentDescription="TODO" />

        </FrameLayout>

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:fontFamily="@font/roboto_mono_bold"
            android:textColor="@color/black"
            android:layout_marginStart="40dp"
            android:layout_marginTop="100dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="@string/time_go"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/time"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/time_echo"
            android:layout_marginTop="50dp"
            android:layout_marginStart="300dp"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_mono_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/blue"/>

        <TextView
            android:id="@+id/numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginStart="320dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="AA0000AA"/>

        <TextView
            android:id="@+id/mark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginStart="320dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="Honda CRV"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/msg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/msg"
                android:layout_marginStart="100dp"
                android:layout_marginTop="140dp"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/tel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/tel"
                android:layout_marginStart="20dp"
                android:layout_marginTop="140dp"
                android:contentDescription="@string/todo1" />
        </FrameLayout>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/bp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/start_finish" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/start_country"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/end_country"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"
            android:text="Стандарт"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="120dp"
            android:text="@string/card"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="170dp"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="170dp"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="230dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="230dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="280dp"
            android:text="@string/model_car"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="AA0000AA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="330dp"
            android:text="@string/time_go"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="330dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="@string/time_echo"
            android:textColor="@color/blue"
            android:textSize="21sp"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="420dp"
            android:backgroundTint="@color/blue"
            android:text="@string/cancel" />

    </FrameLayout>


</LinearLayout>