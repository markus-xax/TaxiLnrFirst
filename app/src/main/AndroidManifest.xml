<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait" >

    <uses-permission android:name="aandroid.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".TaxiApp"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Taxi_full"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/security">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Taxi_full.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar">
        <intent-filter>

        <action android:name="com.example.taxi_full.Welcome"/>

        <category android:name="android.intent.category.DEFAULT" />

        </intent-filter>
        </activity>

        <activity
            android:name=".Driver_ClientActivity"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar">
            <intent-filter>

                <action android:name="com.example.taxi_full.Driver_client"/>

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar">
            <intent-filter>

                <action android:name="com.example.taxi_full.Login"/>

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity
            android:name=".SMSActivity"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar">
            <intent-filter>

                <action android:name="com.example.taxi_full.SMS_Code"/>

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity
            android:name=".RegistrationActivity"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar">
            <intent-filter>

                <action android:name="com.example.taxi_full.Registration"/>

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar"
            android:noHistory="true">
            <intent-filter>

                <action android:name="com.example.taxi_full.Home"/>

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity

            android:name=".HomeActivityDriver"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar"
            android:noHistory="true">
            <intent-filter>

                <action android:name="com.example.taxi_full.HomeDriver"/>

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>
        
        <activity android:name=".GoActivityDriver"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar"
            android:noHistory="true"
            android:launchMode = "singleTask">
            <intent-filter>

                <action android:name="com.example.taxi_full.GoDriver"/>

                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>

        <activity android:name=".GoActivityUser"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar"
            android:noHistory="true"
            android:launchMode = "singleTask">
            <intent-filter>

                <action android:name="com.example.taxi_full.GoUser"/>

                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>

        <activity android:name=".AddCar"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar">
            <intent-filter>

                <action android:name="com.example.taxi_full.AddCar"/>

                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>

        <activity android:name=".RequestDriver"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar"
            android:noHistory="true">
            <intent-filter>

                <action android:name="com.example.taxi_full.RequestDriver"/>

                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>

        <activity android:name=".RequestUser"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar"
            android:noHistory="true">
            <intent-filter>

                <action android:name="com.example.taxi_full.RequestUser"/>

                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>

        <activity android:name=".ChatActivity"
        android:exported="true"
        android:theme="@style/Theme.Taxi_full.NoActionBar">
        <intent-filter>

            <action android:name="com.example.taxi_full.Chat"/>

            <category android:name="android.intent.category.DEFAULT"/>

        </intent-filter>
    </activity>

        <activity android:name=".Debt"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar"
            android:noHistory="true">
            <intent-filter>

                <action android:name="com.example.taxi_full.Debt"/>

                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>

        <activity android:name=".PayOffNal"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar"
            android:noHistory="true">
            <intent-filter>

                <action android:name="com.example.taxi_full.PayOffNal"/>

                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>

        <activity android:name=".CardPaymentActivity"
            android:exported="true"
            android:theme="@style/Theme.Taxi_full.NoActionBar"
            android:noHistory="true">
            <intent-filter>

                <action android:name="com.example.taxi_full.CardPayDriver"/>

                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>


    </application>

</manifest>